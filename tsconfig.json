{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "lib": ["ES6"],
    "allowJs": true,
    "checkJs": true,
    "outDir": "./build",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
